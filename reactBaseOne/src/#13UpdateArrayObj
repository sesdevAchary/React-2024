const ModuleSystem = (() => {
  const modules = {};
  return {
    define(name, deps, factory) {
      modules[name] = { deps, factory, instance: null };
    },
    require(name) {
      const m = modules[name];
      if (!m.instance) {
        m.instance = m.factory(...m.deps.map(dep => this.require(dep)));
      }
      return m.instance;
    }
  };
})();
